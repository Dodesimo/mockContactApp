<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@color/colorPrimary"
    tools:context=".CreateContact">


    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter the name:"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter the phone number:"
        android:inputType="phone" />

    <EditText
        android:id="@+id/etWebsite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter the website:"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter the address:"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/smileyGreen"
            android:layout_width="wrap_content"
            android:layout_height="104dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/smileygreen" />

        <ImageView
            android:id="@+id/smileyYellow"
            android:layout_width="134dp"
            android:layout_height="102dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:src="@drawable/smileyyellow" />

        <ImageView
            android:id="@+id/smileyRed"
            android:layout_width="136dp"
            android:layout_height="102dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:src="@drawable/smileyred" />
    </LinearLayout>

</LinearLayout>


